@using CRUD_MVC___Portifolio
@using CRUD_MVC___Portifolio.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Editar Login";
}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <div class="text-center">
                <h1 class="">Alterar Login</h1>
            </div>
        </div>
        <div cache="col-6">
            <form>
                <div class="form-group">
                    <label for="textUsuario">Usuário:</label>
                    <input type="text" class="form-control" id="textUsuario" aria-describedby="usuarioHelp" placeholder="Usuário">
                </div>
                <div class="form-group">
                    <label for="textPassword">Senha:</label>
                    <input type="password" class="form-control" id="textPassword" placeholder="Senha">
                </div>
                <div>
                    <a class="btn btn-secondary" asp-controller="Login" asp-action="Index">Voltar ao Login</a>
                    <button type="submit" class="btn btn-primary">Alterar</button>
                </div>

            </form>
        </div>
    </div>
</div>