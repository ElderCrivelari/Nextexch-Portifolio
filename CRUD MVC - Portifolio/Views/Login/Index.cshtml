@using CRUD_MVC___Portifolio
@using CRUD_MVC___Portifolio.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model LoginModel
@{
    ViewData["Title"] = "Login";
}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<link rel="stylesheet" href="~/css/Home.css" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<div class="container mt-5">
    @if (!String.IsNullOrEmpty(ViewBag.msgErro))
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <strong>Erro!</strong> @ViewBag.msgErro
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (!String.IsNullOrEmpty(ViewBag.msgSucesso))
    {
        <div class="alert alert-success alert-dismissible fade show">
            <strong>Sucesso!</strong> @ViewBag.msgSucesso
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <h1 class="text-center">Seja bem vindo!</h1>
    <p class="lead text-center">Acesse ou Cadastre-se:</p>
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <form class="form-signin" asp-controller="Login" asp-action="Acessar">
                <label for="inputEmail" class="sr-only">Usuário</label>
                <input type="email" id="inputEmail" asp-for="Login" class="form-control mb-2" placeholder="Email de Usuário" required autofocus>
                <label for="inputPassword" class="sr-only">Senha</label>
                <input type="password" id="inputPassword" asp-for="Senha" class="form-control mb-2" placeholder="Senha" required>
                <button class="btn btn-lg btn-block btn-primary" type="submit">Acessar</button>
            </form>
            <a class="btn btn-block btn-success" asp-controller="Login" asp-action="Criar" role="button">Cadastre-se</a>
        </div>
        
    </div>
</div>