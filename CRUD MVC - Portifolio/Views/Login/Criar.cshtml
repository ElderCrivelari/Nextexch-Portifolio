@using CRUD_MVC___Portifolio
@using CRUD_MVC___Portifolio.Models
@model LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Cadastrar Login";
}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <div class="text-center">
                <h1 class="">Cadastre-se gratuitamente!</h1>
                <p>O cadastro é gratuito, mas lembre-se : os logins somente duram 1 semana!</p>
            </div>
        </div>
        <div cache="col-6">           
            <form asp-controller="Login" asp-action="Criar" method="post">
                <div class="form-group">
                    <label for="textUsuario">Usuário:</label>
                    <input type="text" asp-for="Usuario" class="form-control" id="textUsuario" aria-describedby="usuarioHelp" placeholder="Usuário">
                    <small id="usuarioHelp" class="form-text text-muted">Seu login expira em : @DateTime.Now.AddDays(7) </small> 
                </div>
                <div class="form-group">
                    <label for="textPassword">Senha:</label>
                    <input type="password" asp-for="Senha" class="form-control" id="textPassword" placeholder="Senha">
                </div>
                <div>
                    <a class="btn btn-secondary" asp-controller="Login" asp-action="Index">Voltar ao Login</a>
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                </div>
               
            </form>
        </div>
    </div>
</div>